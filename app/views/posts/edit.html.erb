<h1>Edit post #<%= @post.id  %></h1>

<form action="/update_post/<%= @post.id %>">
  <div>
    <label for="title">Title:</label><br>
    <input type="text" id="title" name="title" value="<%= @post.title %>">
  </div>
  <div>
    <label for="user_id">User</label>
    <select name="user_id" id="user_id">
      <% User.all.each do |user| %>
        <!-- 1a. Check if the user is the posts current user -->
        <!-- 1b. Add the "selected" attribute to the option tag -->
        <% if user.id == @post.user_id %>
          <option value="<%= user.id %>" selected><%=  user.full_name %></option>
        <% else %>
          <option value="<%= user.id %>"><%=  user.full_name %></option>
        <% end %>
      <% end %>
    </select>
  </div>
  <div>
    <label for="image_url">image_url:</label><br>
    <input type="text" id="image_url" name="image_url" value="<%= @post.image_url %>">
  </div>
  <div>
    <label for="contents">contents:</label><br>
    <textarea type="text" id="contents" name="contents"><%= @post.contents %></textarea>
  </div>
  <div>
    <input type="submit">
  </div>
</form>
